    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT \n  sc.id as cart_id,\n  sc.session_id,\n  sc.user_id,\n  sc.created_at,\n  sc.configuration,\n  COALESCE(u.email, sc.configuration->>'contactEmail') as customer_email,\n  COALESCE(u.first_name, sc.configuration->>'contactName') as customer_name,\n  sc.configuration->>'vehicle' as vehicle_type,\n  EXTRACT(EPOCH FROM (NOW() - sc.created_at))/3600 as hours_abandoned\nFROM shopping_cart sc\nLEFT JOIN user_profiles u ON sc.user_id = u.id\nWHERE \n  sc.tenant_id = (SELECT id FROM tenants WHERE slug = 'ezcr-01')\n  AND sc.created_at >= NOW() - INTERVAL '7 days'\n  AND sc.created_at <= NOW() - INTERVAL '2 hours'\n  AND NOT EXISTS (\n    SELECT 1 FROM orders o \n    WHERE o.user_id = sc.user_id \n    AND o.created_at > sc.created_at\n  )\n  AND (sc.configuration->>'contactEmail') IS NOT NULL\nORDER BY sc.created_at DESC\nLIMIT 50;",
        "additionalFields": {}
      },
      "name": "Query Abandoned Carts",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 1,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "1",
          "name": "Supabase PostgreSQL"
        }
      }
    },
