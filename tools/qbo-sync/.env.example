# Intuit / QuickBooks Online (QBO)
QBO_CLIENT_ID=
QBO_CLIENT_SECRET=
QBO_REDIRECT_URI=http://localhost:3000/callback
QBO_REALM_ID=                    # companyId / realmId

# After first consent flow, you'll store the latest refresh token here.
QBO_REFRESH_TOKEN=

# Minor version: Intuit deprecated 1-74; 75+ is the modern default.
QBO_MINOR_VERSION=75

# Sync controls (use same tenant ID as main app)
EZCR_TENANT_ID=00000000-0000-0000-0000-000000000000
QBO_SYNC_ENTITY_LIST=Invoice,SalesReceipt,Payment,RefundReceipt,CreditMemo,Bill,Purchase,Deposit,JournalEntry,Transfer

# Database (Supabase Postgres or any Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# Environment tag (dev/staging/prod) - used in logging only
APP_ENV=dev
